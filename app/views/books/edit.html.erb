<section>
  <h1 class="headline">Editing Book</h1>
  <%= form_for @book, url:"/books/#{@book.id}" do |f| %>
    <h4 class="form-title">Title</h4>
    <%= f.text_field :title %>
    
    <h4 class="form-title">Body</h4>
    <%= f.text_area :body %>
    
    <span class="form-button"><%= f.submit 'Update Book' %></span>
  <% end %>
  <%= link_to 'Edit', edit_book_path(@book.id) %>
  <span>|</span>
  <%= link_to 'Back', books_path %>
</section>