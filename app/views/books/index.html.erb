<section class="books">
  <h1 class="headline">Books</h1>
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </table>
</section>
<section class="new-book">
  <h1 class="headline">New book</h1>
  <%= form_for(@book) do |f| %>
    <h4 class="form-title">Title</h4>
    <%= f.text_field :title %>
    
    <h4 class="form-title">Body</h4>
    <%= f.text_area :body %>
    
    <span class="form-button"><%= f.submit 'Create Book' %></span>
  <% end %>
</section>