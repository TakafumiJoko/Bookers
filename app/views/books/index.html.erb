<section>
  <h1 class="headline">Books</h1>
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', book_path(book.id) %></td>
      <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
      <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    </tr>
    <% end %>
  </table>
</section>
<section>
  <h1 class="headline">New book</h1>
  <%= form_for(@book) do |f| %>
    <h4 class="form-title">Title</h4>
    <%= f.text_field :title %>
    
    <h4 class="form-title">Body</h4>
    <%= f.text_area :body %>
    
    <span class="form-button"><%= f.submit 'Create Book' %></span>
  <% end %>
</section>