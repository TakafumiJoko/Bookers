<section>
  <h1 class="headline">Books</h1>
  <table>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', book_path(book.id) %></td>
      <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
      <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    </tr>
    <% end %>
  </table>
</section>
<section>
  <h1 class="headline">New book</h1>
  <%= form_for(@book) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>
    <div class="input-text">Title</div>
    <%= f.text_field :title, class: 'input' %>

    <div class="input-text">Body</div>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book', class: 'btn' %>
  <% end %>
</section>